<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SettingsView">
        <attr name="icon" format="reference" />
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="value" format="string" />
        <attr name="showArrow" format="boolean" />
        <attr name="position">
            <enum name="single" value="0" />
            <enum name="first" value="1" />
            <enum name="middle" value="2" />
            <enum name="last" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="SettingsViewDropdown">
        <attr name="icon" />
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="value" />
        <attr name="position" />
    </declare-styleable>
    <declare-styleable name="SettingsViewSwitch">
        <attr name="icon" />
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="position" />
    </declare-styleable>
    <declare-styleable name="ManageAccountView">
        <attr name="title" />
        <attr name="arrow" format="boolean" />
        <attr name="attention" format="boolean" />
        <attr name="roundBottom" format="boolean" />
        <attr name="textColor" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="MultipleInputEditTextView">
        <attr name="inputFromQRCode" format="boolean" />
        <attr name="inputFromClipboard" format="boolean" />
        <attr name="inputHint" format="string" />
        <attr name="inputMaxLines" format="integer" />
    </declare-styleable>
    <declare-styleable name="ViewState">
        <attr name="state_error" format="boolean" />
        <attr name="state_warning" format="boolean" />
    </declare-styleable>

    <!--  Custom view themes/styles -->
    <attr name="BallanceCoinNameColor" format="reference|color" />
    <attr name="BallanceCoinAmountColor" format="reference|color" />
    <attr name="TitleColor" format="reference|color" />
    <attr name="TextDimmable" format="reference|color" />
    <attr name="TextColorGreyLightToDark" format="reference|color" />
    <attr name="TextColorBarsToDark" format="reference|color" />
    <attr name="AboutBackgroundColor" format="reference|color" />
    <attr name="TransactionItemBackgroundColor" format="reference|color" />
    <attr name="BottomNavigationBackgroundColor" format="reference|color" />
    <attr name="RippleColor" format="reference|color" />
    <attr name="RoundRippleColor" format="reference|color" />
    <attr name="BottomNavBackground" format="reference" />
    <attr name="HudTextColor" format="reference|color" />
    <attr name="TransactionDetailBackground" format="reference|color" />
    <attr name="TransactionDetailValueTextColor" format="reference|color" />
    <attr name="TransactionDetailBottomBarBackground" format="reference|color" />
    <attr name="LightBackground" format="color" />
    <attr name="BottomSendButtonColor" format="reference|color" />
    <attr name="BottomSendButtonHighlightedColor" format="reference|color" />
    <attr name="BottomSendImageButtonTint" format="reference|color" />
    <attr name="BottomDialogTextColor" format="reference|color" />
    <attr name="ConfirmationDialogBackground" format="reference|color" />
    <attr name="ProgressbarSpinnerColor" format="reference|color" />
    <attr name="SwipeRefreshBackgroundColor" format="reference|color" />
    <attr name="InputBackground" format="reference|color" />
    <attr name="ConfirmationTextColor" format="reference|color" />
    <attr name="AddCoinButtonPlaceholder" format="reference|color" />
    <attr name="ShadingBottomGradient" format="reference" />
    <attr name="SecondaryButtonStartGradient" format="reference|color" />
    <attr name="SecondaryButtonEndGradient" format="reference|color" />

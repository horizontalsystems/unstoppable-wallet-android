<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle">
        <item name="colorControlNormal">?ColorJacob</item>
    </style>

    <style name="BottomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimations</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <style name="BottomDialogAnimations" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="SwitchTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlActivated">?ColorRemus</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">@color/grey</item>
    </style>

    <style name="TransactionInfoStatusProgressBarBig">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:src">@drawable/status_progress_bar_grey</item>
    </style>

    <!--Button Styles-->

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/button_text_color_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:paddingEnd">9dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@color/button_secondary_text_color_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonPrivacySettings">
        <item name="android:background">@drawable/button_privacy_settings_background</item>
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:paddingEnd">11dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ImageButtonSecondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/button_secondary_background</item>
    </style>

    <style name="ButtonPrimaryGreen" parent="Button">
        <item name="android:background">@drawable/button_green_background</item>
    </style>

    <style name="ButtonPrimarySteel" parent="Button">
        <item name="android:background">@drawable/button_steel_background</item>
    </style>

    <style name="ButtonPrimaryYellow" parent="Button">
        <item name="android:background">@drawable/button_yellow_background</item>
    </style>

    <style name="ButtonPrimaryDestructive" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_red_background</item>
    </style>

    <!--Text Button Styles-->

    <style name="TextButton">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">14sp</item>

        <item name="android:background">@drawable/address_background_themed</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?TransactionDetailValueTextColor</item>
    </style>

    <style name="TextButtonWithIcon" parent="TextButton">
        <item name="android:drawableStart">@drawable/round_person_18px</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/grey</item>
    </style>

    <style name="TextFlatButton">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/stateful_button_lightgrey_color</item>
        <item name="android:background">@drawable/stateful_button_jeremy_color</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Final, top-level theme-->
    <style name="Theme.AppTheme.DayNight" parent="Theme.AppTheme"/>

    <style name="Theme.AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/yellow_l</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:windowBackground">@color/light</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:actionMenuTextAppearance">@style/Headline2</item>
        <item name="actionMenuTextColor">@color/stateful_button_yellow_color</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/yellow_l</item>
        <item name="colorControlHighlight">#6E7899</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>

        <item name="BallanceCoinNameColor">@color/dark</item>
        <item name="BallanceCoinAmountColor">@color/dark</item>
        <item name="TitleColor">@color/dark</item>
        <item name="TextDimmable">@color/dimmable_dark</item>
        <item name="TextColorGreyLightToDark">@color/dark</item>
        <item name="TextColorBarsToDark">@color/dark</item>
        <item name="AboutBackgroundColor">@color/white</item>
        <item name="TransactionItemBackgroundColor">@color/transaction_item_background_light</item>
        <item name="BottomNavigationBackgroundColor">@color/light</item>
        <item name="RippleColor">@color/ripple_black</item>
        <item name="RoundRippleColor">@color/light_grey</item>
        <item name="BottomNavBackground">@drawable/shadow_bottom_navigation_light</item>
        <item name="TransactionDetailBackground">@color/white</item>
        <item name="TransactionDetailValueTextColor">@color/dark</item>
        <item name="TransactionDetailBottomBarBackground">#f5fafafa</item>
        <item name="LightBackground">@color/steel_light</item>
        <item name="BottomSendButtonColor">@color/steel_light</item>
        <item name="BottomSendButtonHighlightedColor">@color/light_grey</item>
        <item name="BottomSendImageButtonTint">@color/black</item>
        <item name="BottomDialogTextColor">@color/black</item>
        <item name="ConfirmationDialogBackground">@color/light</item>
        <item name="ProgressbarSpinnerColor">@color/light</item>
        <item name="SwipeRefreshBackgroundColor">@color/light</item>
        <item name="InputBackground">@color/white</item>
        <item name="ConfirmationTextColor">@color/dark</item>
        <item name="AddCoinButtonPlaceholder">@color/light</item>
        <item name="ShadingBottomGradient">@drawable/rates_gradient_light</item>
        <item name="SecondaryButtonStartGradient">#ffffffff</item>
        <item name="SecondaryButtonEndGradient">#00ffffff</item>
        <item name="MarketCircleGradient">@drawable/market_circle_light</item>
        <item name="SplashScreenBackground">@drawable/ic_intro_background_light</item>

        <!--  Gradient colors-->
        <item name="ColorGradientWhite">@color/white</item>
        <item name="ColorWindowBackground">@color/light</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/tyler</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.AppTheme</item>
    </style>
</resources>

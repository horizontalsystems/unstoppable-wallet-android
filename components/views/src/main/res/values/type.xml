<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography -->

    <style name="Title2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?TitleColor</item>
    </style>

    <style name="Title2R">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Title3">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?TitleColor</item>
    </style>

    <style name="Headline1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Headline2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Subhead1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Subhead2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CaptionSB">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Micro">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextLabel">
        <item name="android:background">@drawable/label_background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/bran</item>
    </style>
</resources>

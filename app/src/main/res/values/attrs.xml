<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string" />
    <attr name="subtitle" format="string" />

    <declare-styleable name="TransactionInfoItemView">
        <attr name="title" />
        <attr name="value" format="string" />
        <attr name="valueSubtitle" format="string" />
        <attr name="showValueBackground" format="boolean" />
        <attr name="valueIcon" format="integer" />
    </declare-styleable>
    <declare-styleable name="FullTransactionInfoItemView">
        <attr name="infoTitle" format="string" />
        <attr name="infoValue" format="string" />
        <attr name="infoValueIcon" format="integer" />
    </declare-styleable>
    <declare-styleable name="MultipleInputEditTextView">
        <attr name="inputFromQRCode" format="boolean" />
        <attr name="inputFromClipboard" format="boolean" />
        <attr name="inputHint" format="string" />
        <attr name="inputMaxLines" format="integer" />
    </declare-styleable>
    <declare-styleable name="ChartView">
        <attr name="showGrid" format="boolean" />
        <attr name="width" format="dimension" />
        <attr name="height" format="dimension" />
        <attr name="animated" format="boolean" />
        <attr name="growColor" format="color" />
        <attr name="fallColor" format="color" />
        <attr name="touchColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="textPriceColor" format="color" />
        <attr name="gridColor" format="color" />
        <attr name="gridDottedColor" format="color" />
        <attr name="partialChartColor" format="color" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>
    <declare-styleable name="CellView">
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="rightTitle" format="string" />
        <attr name="bottomBorder" format="boolean" />
        <attr name="rightArrow" format="boolean" />
        <attr name="imageDrawable" format="integer" />
        <attr name="imageTint" format="integer" />
    </declare-styleable>
    <declare-styleable name="RateDiffView">
        <attr name="negativeColor" format="color" />
        <attr name="positiveColor" format="color" />
    </declare-styleable>
</resources>

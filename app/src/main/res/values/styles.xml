        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:background">@drawable/button_yellow_background_12</item>
    </style>

    <style name="ButtonSmallGrey_4" parent="Button">
        <item name="android:background">@drawable/button_grey_background_4_themed</item>
